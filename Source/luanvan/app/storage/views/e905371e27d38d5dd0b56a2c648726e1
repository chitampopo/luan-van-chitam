                                        $("#hider").click(function () {
                                            if ($(this).text() === 'Ẩn thông tin cơ bản') {
                                                $(this).text('Hiện thông tin cơ bản');
                                                $("#box1").hide("fast");
                                            } else {
                                                $(this).text('Ẩn thông tin cơ bản');
                                                $("#box1").show("fast");
